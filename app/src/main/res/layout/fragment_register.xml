<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.RegisterFragment">

    <EditText
        android:id="@+id/edt_username_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/roug_username_background"
        android:ellipsize="end"
        android:hint="请输入邮箱"
        android:inputType="text"
        android:maxLines="1"
        android:padding="7dp"
        android:textColor="#000"
        android:textColorHint="#cdcdcd"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.xwray.passwordview.PasswordView
        android:id="@+id/edt_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/roug_username_background"
        android:hint="请设置密码"
        android:padding="7dp"
        android:textColor="#000"
        android:textColorHint="#cdcdcd"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_username_register" />

    <EditText
        android:id="@+id/edt_id_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/roug_username_background"
        android:ellipsize="end"
        android:hint="请输入验证码"
        android:inputType="text"
        android:maxLines="1"
        android:padding="7dp"
        android:textColor="#000"
        android:textColorHint="#cdcdcd"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_password_register"
        />

    <Button
        android:id="@+id/btn_get_id_register"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@drawable/roug_username_background"
        android:text="获取验证码"
        android:textColor="#cdcdcd"
        app:layout_constraintBottom_toBottomOf="@id/edt_id_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_id_register" />

    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/roug_register_background"
        android:text="立即注册"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_id_register" />


    <TextView
        android:id="@+id/tv_register_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="已有账号？立即登录"
        android:textColor="#DD2C00"
        app:layout_constraintEnd_toEndOf="@id/edt_password_register"
        app:layout_constraintTop_toBottomOf="@id/edt_id_register" />


</androidx.constraintlayout.widget.ConstraintLayout>