<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="false">
        <shape>
        <!-- rectangle表示为矩形 -->
        <!-- 填充的颜色 -->
        <solid android:color="#807A7A7A" />



        <!-- android:radius 圆角的半径 -->
        <corners
            android:radius="15dp"
            />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!-- rectangle表示为矩形 -->
            <!-- 填充的颜色 -->
            <solid android:color="#805A5A5A" />


            <!-- android:radius 圆角的半径 -->
            <corners
                android:radius="15dp"
                />
        </shape>
    </item>
</selector>